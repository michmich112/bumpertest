{
  "scheme": "custom",
  "schemeDefinition": "major.minor[.build][->patch]",
  "versionFile": "./package.json",
  "files": [],
  "rules": [
    {
      "trigger": "commit",
      "branch": "test",
      "bump": "patch"
    },
    {
      "trigger": "commit",
      "bump": "build",
      "reset": "patch"
    },
    {
      "trigger": "commit",
      "bump": "minor",
      "branch": "master",
      "reset": "build"
    },
    {
      "trigger": "commit",
      "bump": "major",
      "branch": "release",
      "reset": [
        "minor",
        "build"
      ]
    }
  ]
}
